---
const {
	title = "T - Asfalto",
	description = "Venta de asfalto RC-250 y productos bituminosos en Perú",
} = Astro.props;

import "../styles/global.css";
import Header from "../components/Header.jsx";
import Footer from "../components/Footer.astro";
import AosClient from "../components/AosClient.jsx";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="robots" content="index, follow" />
		<link rel="icon" href="/favicon.svg" />
		<!-- SEO -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://t-asfalto.vercel.app/" />
		<meta property="og:image" content="/images/preview.jpg" />
		<link rel="canonical" href="https://t-asfalto.vercel.app/" />
		<meta name="author" content="T-Asfalto Perú" />
		<meta name="theme-color" content="#f5b700" />
		<meta property="og:locale" content="es_PE" />
		<meta property="og:site_name" content="T-Asfalto Perú" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content="/images/preview.jpg" />
	</head>

	<body>
		<Header client:only="react" />
		<div class="pt-[60px] flex flex-col relative">
			<slot />
		</div>
		<Footer />
		<AosClient client:only="react" />
	</body>
</html>

<style is:global>
	@import "tailwindcss";

	@theme {
		--color-primary: #f5b700;
		--color-secondary: #ff9800;
		--color-text: #1b1b1b;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		scroll-behavior: smooth;
	}
</style>
