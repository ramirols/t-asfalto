---
import imageCard1 from "../assets/images/image-card-1.png";
import imageCard2 from "../assets/images/image-card-1.png";
import imageCard3 from "../assets/images/image-card-1.png";
---

<section id="servicios" class="bg-white py-20">
	<div class="max-w-6xl mx-auto px-6 lg:px-8">
		<div class="text-center mb-16">
			<h1
				class="text-3xl md:text-4xl font-bold text-gray-900 uppercase tracking-wide"
				data-aos="fade-up"
				data-aos-duration="1000"
			>
				Nuestros Servicios
			</h1>
			<p
				class="text-gray-600 mt-4 max-w-3xl mx-auto"
				data-aos="fade-up"
				data-aos-duration="1000"
			>
				Ofrecemos una amplia gama de <span
					class="font-semibold text-primary"
					>servicios especializados en asfalto</span
				>.
			</p>
		</div>

		<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-12">
			<!-- CARD -->
			<div
				class="relative group rounded-3xl shadow-md transition-all duration-500 cursor-pointer hover:shadow-[0_0_25px_-5px_rgba(0,0,0,0.3)]"
				data-aos="fade-up"
				data-aos-duration="400"
			>
				<div
					class="absolute inset-0 rounded-3xl opacity-0 group-hover:opacity-100 transition duration-500 pointer-events-none border-2 border-primary/60"
				>
				</div>

				<img
					src={imageCard1.src}
					class="w-full h-56 object-cover transition-transform duration-700 group-hover:translate-y-[-10px]"
				/>

				<div
					class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent"
				>
				</div>

				<div
					class="absolute -bottom-6 left-1/2 -translate-x-1/2 text-center w-[90%] max-[900px]:w-[80%]"
				>
					<div
						class="bg-primary backdrop-blur-md py-2 px-4 text-white font-semibold"
					>
						Pistas
					</div>
				</div>
			</div>

			<!-- CARD 2 -->
